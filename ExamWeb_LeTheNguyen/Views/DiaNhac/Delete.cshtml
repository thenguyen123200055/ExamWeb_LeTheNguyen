@model DiaNhacManagerWeb.Models.DiaNhac

<form asp-action="DeleteConfirm" method="post">
    <input asp-for="Id" type="hidden" />
    <h3>Are you sure to delete?</h3>

    <div class="form-group">
        <label>Tựa CD</label>
        <input asp-for="TuaCD" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Thể loại</label>
        <input asp-for="TheLoai" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Giá bán</label>
        <input asp-for="GiaBan" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="SoLuong" class="form-control" readonly />
    </div>

    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>